[alias]
  co = checkout
  r = review
  l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(magenta)(%an, %cr)%Creset
[branch "master"]
  remote = origin
[push]
  default = current
[merge]
  tool = vimdiff
  prompt = false
  conflictstyle = diff3
